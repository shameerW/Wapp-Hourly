<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Name Label -->

        <TextView
            android:id="@+id/daterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/neonG"
            android:textSize="@dimen/text_size_med" />

        <!-- Description label -->
        <!-- Linear layout for cost and price Cost: Rs.100 -->

        <TableRow
            android:id="@+id/TableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal" >

          

            <TextView
                android:id="@+id/wTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/Weather"
                android:textColor="@color/cityText"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" 
                android:layout_weight="1">

            </TextView>

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TextView"
                android:textColor="@color/egg_shell" />

            <TextView
                android:id="@+id/tTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/Temp"
                android:textColor="@color/cityText"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_weight="1" >

            </TextView>

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TextView"
                android:textColor="@color/egg_shell" />

        </TableRow>
    </TableLayout>

  <TableRow
      android:id="@+id/tableRow2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="invisible" >

      <TextView
          android:id="@+id/humidTextView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/descTextView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/pressTextView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/minTextView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/maxTextview1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

      <TextView
          android:id="@+id/speedTextView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView" />

            </TableRow>

</TableLayout>